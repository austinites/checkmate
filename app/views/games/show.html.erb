<h1>Here's Your Game</h1>


<% if @game.black_id == nil || @game.white_id ==nil       %>
  <% if @game.black_id != current_user.id && @game.white_id != current_user.id %>
     This game still needs another player! <p>
     Would you like to join?
    <%= simple_form_for @game do |f| %>
     <%= f.submit 'Join', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
<% end %>


<p>
<p>
<table id="chess-board">
<% 8.times do |j|%>
  <tr>
    <% 8.times do |i|%>
      <td>
      	<%  @game.pieces.all.each do |piece| %>
      	<%		if piece.xcoordinate==i     %>
      	<%			if piece.ycoordinate==7-j %>
      	<%=        		raw(piece.code)	%>
      	<%			end 					%>
      	<%		end 						%>
      	<%	end                             %>

      </td>
    <% end %>
  </tr> 
<% end %> 
</table>

<script>
  $("#chess-board td").click(function() {
    console.log(this);
  });

  

</script>




